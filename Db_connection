[HttpPost("Chefs/create")]
    public IActionResult CreateChef (Chef newChef)
    {    
        if(ModelState.IsValid)
        {
            _context.Add(newChef);    
            _context.SaveChanges();
            return RedirectToAction("Chefs");
        } 
        else 
        {
            return View ("ChefForm");    
        }
    }



